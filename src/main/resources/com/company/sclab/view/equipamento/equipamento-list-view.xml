<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://equipamentoListView.title"
      focusComponent="equipamentoesDataGrid">
    <data>
        <collection id="equipamentoesDc"
                    class="com.company.sclab.entity.Equipamento">
            <fetchPlan extends="_base">
                <property name="tipoEquip" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="equipamentoesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Equipamento e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="equipamentoesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="equipamentoesDataGrid.createAction"/>
            <button id="editButton" action="equipamentoesDataGrid.editAction"/>
            <button id="removeButton" action="equipamentoesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="equipamentoesDl"/>
        </hbox>
        <dataGrid id="equipamentoesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="equipamentoesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="idRFID"/>
                <column property="descricao"/>
                <column property="equipAtivo"/>
                <column property="patrimonio"/>
                <column property="observacoes"/>
                <column property="tipoEquip"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
