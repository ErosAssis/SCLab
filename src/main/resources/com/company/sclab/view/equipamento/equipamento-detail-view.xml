<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://equipamentoDetailView.title"
      focusComponent="form">
    <data>
        <instance id="equipamentoDc"
                  class="com.company.sclab.entity.Equipamento">
            <fetchPlan extends="_base">
                <property name="tipoEquip" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="equipamentoDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="equipamentoDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="idRFIDField" property="idRFID"/>
            <textField id="descricaoField" property="descricao"/>
            <textField id="patrimonioField" property="patrimonio"/>
            <textField id="observacoesField" property="observacoes"/>
            <entityPicker id="tipoEquipField" property="tipoEquip">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <checkbox id="equipAtivoField" property="equipAtivo"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
