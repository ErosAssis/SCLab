<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://emprestimoDetailView.title"
      focusComponent="form">
    <data>
        <collection id="usersDc" class="com.company.sclab.entity.User">
            <loader id="usersDl" readOnly="true">
                <query>
                    <![CDATA[select e from User e
                    order by e.username asc]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <instance id="emprestimoDc"
                  class="com.company.sclab.entity.Emprestimo">
            <fetchPlan extends="_base">
                <property name="responsavelDevolucao" fetchPlan="_base"/>
                <property name="responsavelRetirada" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="emprestimoDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="emprestimoDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="comodatarioField" property="comodatario"/>
            <datePicker id="dataRetiradaField" property="dataRetirada"/>
            <datePicker id="dataDevolucaoField" property="dataDevolucao"/>
            <entityComboBox id="responsavelRetiradaField" property="responsavelRetirada" itemsContainer="usersDc"/>
            <entityComboBox id="responsavelDevolucaoField" property="responsavelDevolucao" itemsContainer="usersDc"/>
            <textField id="observacoesField" property="observacoes"/>
            <textField id="idRFIDField" property="idRFID"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
