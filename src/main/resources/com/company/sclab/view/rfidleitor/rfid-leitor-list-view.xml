<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://rfidLeitorListView.title"
      focusComponent="rfidLeitorsDataGrid">
    <data>
        <collection id="rfidLeitorsDc"
                    class="com.company.sclab.entity.RfidLeitor">
            <fetchPlan extends="_base"/>
            <loader id="rfidLeitorsDl" readOnly="true">
                <query>
                    <![CDATA[select e from RfidLeitor e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="rfidLeitorsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="rfidLeitorsDataGrid.createAction"/>
            <button id="editButton" action="rfidLeitorsDataGrid.editAction"/>
            <button id="removeButton" action="rfidLeitorsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="rfidLeitorsDl"/>
        </hbox>
        <dataGrid id="rfidLeitorsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="rfidLeitorsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="tagCodigo"/>
                <column property="lidoEm"/>
                <column property="portaUtilizada"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
